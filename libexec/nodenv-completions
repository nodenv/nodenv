#!/usr/bin/env bash
# Usage: nodenv completions <command> [<args>...]

set -e
[ -n "$NODENV_DEBUG" ] && set -x

COMMAND="$1"
if [ -z "$COMMAND" ]; then
  nodenv-help --usage completions >&2
  exit 1
fi

# Provide nodenv completions
if [ "$COMMAND" = "--complete" ]; then
  exec nodenv-commands
fi

COMMAND_PATH="$(type -P "nodenv-$COMMAND" "nodenv-sh-$COMMAND" | head -n1)"

# --help is provided automatically
echo --help

if grep -iE "^([#%]|--|//) provide nodenv completions" "$COMMAND_PATH" >/dev/null; then
  shift
  exec "$COMMAND_PATH" --complete "$@"
fi
