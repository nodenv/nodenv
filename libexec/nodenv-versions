#!/usr/bin/env bash
# Summary: List all Node versions available to nodenv
# Usage: nodenv versions [--bare]
#
# Lists all Node versions found in `$NODENV_ROOT/versions/*'.

set -e
[ -n "$NODENV_DEBUG" ] && set -x

if [ "$1" = "--bare" ]; then
  hit_prefix=""
  miss_prefix=""
  current_version=""
  include_system=""
else
  hit_prefix="* "
  miss_prefix="  "
  current_version="$(nodenv-version-name || true)"
  include_system="1"
fi

num_versions=0

print_version() {
  if [ "$1" == "$current_version" ]; then
    echo "${hit_prefix}$(nodenv-version 2>/dev/null)"
  else
    echo "${miss_prefix}$1"
  fi
  num_versions=$((num_versions + 1))
}

# Include "system" in the non-bare output, if it exists
if [ -n "$include_system" ] && NODENV_VERSION=system nodenv-which node >/dev/null 2>&1; then
  print_version system
fi

shopt -s nullglob
for path in "${NODENV_ROOT}/versions/"*; do
  if [ -d "$path" ]; then
    print_version "${path##*/}"
  fi
done
shopt -u nullglob

if [ "$num_versions" -eq 0 ] && [ -n "$include_system" ]; then
  echo "Warning: no Node detected on the system" >&2
  exit 1
fi
